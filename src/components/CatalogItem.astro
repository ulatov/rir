---
import { Picture } from 'astro:assets';
import CatalogImage from './CatalogImage.astro';

const { url, title, src, price, ...attrs } = Astro.props;
---
<div>
    <a href={url}>
        <h2>{title}</h2>
    </a>
    <CatalogImage src={src} {...attrs} />
    <h3>{price} руб.</h3>
    
</div>

<style>
    div {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        list-style: none;
        grid-auto-rows: 1fr;
        border: solid 1px;
        border-radius: 5px;
        background: #FFF;
        margin: 5px;
    }
    h2, h3 {
        margin: 10px;
        padding: 5px;
    }
    h3 {
        align-self: flex-end;
    }
    a {
        display: block;
        
    }
    picture {
        align-self: center;
    }
</style>